{
  "name": "electron-create-react-app-test",
  "version": "0.1.0",
  "main": "index.js",
  "author": "Damien ARTIGNAN",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^5.1.0",
    "copyfiles": "^2.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.5",
    "prettier": "^2.0.4",
    "wait-on": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "build": "yarn --cwd renderer build && yarn --cwd main build",
    "postbuild": "copyfiles -u 2 \"./renderer/build/**/*.*\" \"build/renderer\" && copyfiles -u 2 \"./main/build/**/*.*\" \"build/main\"",
    "format": "prettier --write **/*.{js,jsx,ts,tsx,json,css,scss,md}",
    "start": "concurrently \"yarn --cwd renderer start\" \"wait-on http://localhost:3000 && yarn --cwd main start\""
  }
}
